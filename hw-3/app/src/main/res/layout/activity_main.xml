<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#83000000"
    android:backgroundTint="#474444"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/text0"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:fontFamily="cursive"
        android:text="grade calculator"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="35sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/editText3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="#7CF7FAF7"
        android:ems="10"
        android:hint=" final            %30"
        android:inputType="textPersonName"
        android:textColor="#F4F3F3"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"


        android:background="#7CF7FAF7"
        android:ems="10"
        android:hint="mid terms  % 30"

        android:inputType="textPersonName"
        android:textColor="#F6F4F4"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"

        android:layout_alignTop="@+id/editText1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="#7CF7FAF7"
        android:ems="10"
        android:hint="homework % 25"

        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        android:textColor="#F6F2F2"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/text0"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="175dp"

        android:background="#7CF7FAF7"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Quizes       %15"

        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textColor="#F4F1F1"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"

        android:layout_height="50dp"
        android:layout_alignTop="@+id/editText4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"

        android:backgroundTint="#59000000"
        android:text="calculate"
        android:textSize="18sp" />

</RelativeLayout>